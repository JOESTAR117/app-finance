<div id="<%= dom_id movement %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Data:</strong>
    <%= movement.data %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= movement.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Value:</strong>
    <%= movement.value %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">type:</strong>
    <%= movement.types %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Ver essa movimentação", movement, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Editar essa movimentação", edit_movement_path(movement), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
